//- Basic mixin
include ../mixin/_mixin
//- Base Config
include ../config/_setting
doctype html
html(lang="zh-TW" dir="ltr")
  block page-data
  head
    //- Default Meta Info
    include _layout-head
    include _layout-favicon
    include _layout-og
    //- Vendor Tools
    include ../vendor/_layout-ga
    include ../vendor/_layout-fp
    block site-styles
      include _layout-styles
    //- Below to IE9 
    <!--[if lt IE 9]>
    script(src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js")
    <![endif]-->
    //- script(src="https://code.jquery.com/jquery-2.1.1.min.js")
    script(src="./js/vendor-min.js")
  //- ./ end head
  body(class=page.pageClassName id="body")
    .page
      include ../partials/_header
      block main
      include ../partials/_footer
    block site-scripts
  //- ./ end body